datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Priority {
  LOW
  MEDIUM
  HIGH
  VERY_HIGH
}

model List {
  id    Int    @id @default(autoincrement())
  name  String @unique
  tasks Task[]
}

model Task {
  id                 Int       @id @default(autoincrement())
  name               String
  description        String?
  priority           Priority
  expectedFinishDate DateTime?
  finishDate         DateTime?

  //relacionamento com list
  listId Int
  list   List @relation(fields: [listId], references: [id], onDelete: Restrict)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
